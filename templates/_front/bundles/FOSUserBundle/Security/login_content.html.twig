{% trans_default_domain 'FOSUserBundle' %}


<form action="{{ path("fos_user_security_check") }}" method="post">
    <div class="card-header">
        Login form
    </div>
    <div class="card-body">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" class="form-control {{  error ? 'is-invalid' : '' }}" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control {{  error ? 'is-invalid' : '' }}" />
            {% if error %}
                <div class="invalid-feedback">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" />
            <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>

    </div>
    <div class="card-footer">
        <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
</form>
